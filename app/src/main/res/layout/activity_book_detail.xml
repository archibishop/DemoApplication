<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BookDetailActivity" android:id="@+id/value">

    <TextView
            android:text="Destination"
            android:textSize="22sp"
            android:layout_width="115dp"
            android:layout_height="41dp"
            android:id="@+id/destination"
            android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/value1" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/Details"/>
    <TextView
            android:text="Value1"
            android:textSize="22sp"
            android:layout_width="128dp"
            android:layout_height="41dp"
            android:id="@+id/value1" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/Details"/>
    <TextView
            android:text="Pick Up Point"
            android:textSize="22sp"
            android:layout_width="128dp"
            android:layout_height="33dp"
            android:id="@+id/pickUp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/destination"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/value2"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:textSize="22sp"
            android:layout_width="132dp"
            android:layout_height="33dp"
            android:id="@+id/value2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/value1"/>
    <TextView
            android:text="No Of People"
            android:textSize="22sp"
            android:layout_width="140dp"
            android:layout_height="34dp"
            android:id="@+id/noPeople" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/pickUp"/>
    <TextView
            android:text="10"
            android:textSize="22sp"
            android:layout_width="119dp"
            android:layout_height="37dp"
            android:id="@+id/value3" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/value2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/noPeople"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.708"/>
    <TextView
            android:text="Booked Trip Details"
            android:textSize="24sp"
            android:layout_width="208dp"
            android:layout_height="45dp"
            android:id="@+id/Details"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Driver"
            android:textSize="22sp"
            android:layout_width="116dp"
            android:layout_height="36dp"
            android:id="@+id/assigned_driver" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/noPeople"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/driver" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="John Doe"
            android:textSize="22sp"
            android:layout_width="119dp"
            android:layout_height="33dp"
            android:id="@+id/driver" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/value3"
    />
    <TextView
            android:id="@+id/date"
            android:text="22/05/22"
            android:textSize="22sp"
            android:layout_width="86dp"
            android:layout_height="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/driver" app:layout_constraintStart_toEndOf="@+id/textView14"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.905"/>
    <TextView
            android:textSize="22sp"
            android:text="Date For Trip"
            android:layout_width="144dp"
            android:layout_height="33dp"
            android:id="@+id/textView14" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/assigned_driver" android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.158"/>
</android.support.constraint.ConstraintLayout>